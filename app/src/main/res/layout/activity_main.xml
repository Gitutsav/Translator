<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"> <!-- Vertical Orientation set -->

    <!-- Child Views(In this case 2 Button) are here -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <EditText
        android:id="@+id/editText"
        android:layout_width="312dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ENTER TEXT TO TRANSLATE....."
        android:inputType="textPersonName"
        android:text="" />

    <ImageButton
        android:id="@+id/button1"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@mipmap/microphone" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#358a32"
            android:onClick="onTranslateclick"
            android:text="TRANSLATE" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#005599"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/translationTextViewFrench"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="#EEEEEE"
                android:hint="FRENCH"

                android:text="FRENCH" />

            <Button
                android:id="@+id/texttospeechFrench"

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="39dp"
                android:text="Listen"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/translationTextViewGerman"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="#EEEEEE"
                android:hint="GERMAN"
                android:text="GERMAN" />

            <Button
                android:id="@+id/texttospeechGerman"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="39dp"
                android:text="Listen"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/translationTextViewSpanich"
                android:layout_width="290dp"
                android:layout_height="43dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:background="#EEEEEE"
                android:hint="SPANISH"
                android:text="SPANISH " />

            <Button
                android:id="@+id/texttospeechSpanish"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="39dp"
                android:text="Listen"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/translationTextViewGerman1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="#888888"
        android:text="LANGUAGE TRANSLATOR APPLICATION"
        android:gravity="center"
        android:ellipsize="end"
        android:fadingEdge="horizontal"
        android:layout_margin="20dp"
       />


</LinearLayout>
